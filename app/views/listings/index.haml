#listings
	- @listings.each_index do |i|
		- l = @listings[i]
		- if i % 2 == 0
			- classs = ""
		- else
			- classs = "highlight"
		#listing{:class => "#{classs}"}
			%h5 
				= link_to l.job.position, :controller => :listings, :action => :show, :id => l.id
			%h6
				= l.company.name
			%p
				= l.job.description
			#clear
